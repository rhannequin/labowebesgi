<h1><%= @user.full_name %></h1>

<!-- Sign up date and Tags -->
<div class="row user-information">
  <div class="col-md-6">
    <h3><%= t '.created_at' %></h3>
    <p><%= l @user.created_at, format: :date %></p>
  </div>
  <div class="col-md-6">
    <h3><%= t '.associated_tags' %></h3>
    <p><%= render partial: 'tags/tag_list', locals: { tags: @user.associated_tags } %></p>
  </div>
</div>

<!-- Blog and Website -->
<% website = @user.website; blog = @user.blog %>
<% websiteUnavailable = website.nil? || website.empty? %>
<% blogUnavailable = blog.nil? || blog.empty? %>
<% unless websiteUnavailable && blogUnavailable %>
<div class="row user-information">
  <% unless websiteUnavailable %>
    <div class="col-md-6">
      <h3><%= t 'website' %></h3>
      <p><%= link_to website, website %></p>
    </div>
  <% end %>
  <% unless blogUnavailable %>
    <div class="col-md-6">
      <h3><%= t 'blog' %></h3>
      <p><%= link_to blog, blog %></p>
    </div>
  <% end %>
</div>
<% end %>

<%= render partial: 'talks/talk_list', locals: {talks: @user.talks, from: :user} %>
